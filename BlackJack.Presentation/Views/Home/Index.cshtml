<div id="gameHead" class="jumbotron">
    <h1>Start new game</h1>

    <form method="post">

        <div class="form-group">
            <label>Your name:</label>
            <input class="form-control" type="text" id="PlayerName" value="" required />
        </div>
        <div class="form-group">
            <label for="NumberOfPlayers">Number of Bots:</label>
            <input class="form-control" type="text" id="NumberOfBots" value="0" />
        </div>
        <div class="form-group">
            <button id="startGame" class="btn btn-primary">Play</button>
        </div>

    </form>

</div>

<div id="gameBody">
    <div id="roundBody" class="jumbotron">
        <h3>game runs here</h3>
    </div>
</div>

<div id="roundSummary">
    <div class="message"></div>
    <div id="startNextRound" class="btn btn-success">Next Round</div>
    <div id="quitGame" class="btn btn-danger">Quit</div>
</div>

@section scripts
{
    <script src="~/Scripts/myScripts/GameLogic.js" type="text/javascript"></script>
}

