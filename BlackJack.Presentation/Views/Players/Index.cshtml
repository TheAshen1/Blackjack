
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="tableBlock"></div>

<div id="editBlock">
    <p><b>Edit Player</b></p>
    <table>
        <tr><td><input type="hidden" id="editId" /></td><td></td></tr>
        <tr><td><label>Name: </label></td><td><input type="text" id="editName" /></td></tr>
        <tr><td><label>IsBot: </label></td><td><input type="text" id="editIsBot" /></td></tr>
    </table>
    <button id="editPlayer">Save</button>
</div>

<div id="createBlock">
    <p><b>Create Player</b></p>
    <table>
        <tr><td><label>Name: </label></td><td><input type="text" id="createName" /></td></tr>
        <tr><td><label>IsBot: </label></td><td><input type="text" id="createIsBot" /></td></tr>
    </table>
    <button id="createPlayer">Create</button>
</div>

@section scripts
{
    <script src="~/Scripts/Players.js" type="text/javascript" ></script>
}

